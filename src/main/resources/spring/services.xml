<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	 http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.goup.service"/>
	<bean id="googleDocsService" class="com.goup.service.GoogleDocsService">
		<property name="prefix" value="${googledocs.webcontent.prefix}"/>
	</bean>
	<bean id="gdataDocService" class="com.goup.gdata.client.SpringableDocsService">
	    <constructor-arg value="${googledocs.applicationName}"/>
		<property name="userName" value="${googledocs.username}"/>
		<property name="password" value="${googledocs.password}"/>
	</bean>
</beans>